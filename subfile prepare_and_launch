#!/bin/bash

RESULTS_DIR="/proj/nobackup/sens2025014/wharf/eftih/eftih-sens2025014/abacus_results_1004457"
BAM_DIR="/proj/nobackup/sens2025014/wharf/jesperei/jesperei-sens2025014/1004457"

mkdir -p "${RESULTS_DIR}"

# find all BAMs recursively in subfolders
find "${BAM_DIR}" -type f -name "*.bam" > bam_list.txt

# count how many BAM files exist
NUM_BAM=$(wc -l < bam_list.txt)

if [[ "${NUM_BAM}" -eq 0 ]]; then
    echo "ERROR: No BAM files found in ${BAM_DIR}"
    exit 1
fi

# create the SLURM script with the correct number of jobs
cat > run_abacus_array.sbatch << EOF
#!/bin/bash
#SBATCH --job-name=abacus
#SBATCH --output=${RESULTS_DIR}/slurm-%A_%a.out
#SBATCH --error=${RESULTS_DIR}/slurm-%A_%a.err
#SBATCH --time=12:00:00
#SBATCH --cpus-per-task=4
#SBATCH --mem=16G
#SBATCH -A sens2025014
#SBATCH --array=1-${NUM_BAM}

module purge

CONTAINER="/proj/sens2025014/containers/abacus-image.sif"
RESULTS_DIR="${RESULTS_DIR}"

BAM_FILE=\$(sed -n "\${SLURM_ARRAY_TASK_ID}p" bam_list.txt)

bash run_abacus_in_container.sh "\${BAM_FILE}"
EOF

# send the SLURM job array
sbatch run_abacus_array.sbatch
